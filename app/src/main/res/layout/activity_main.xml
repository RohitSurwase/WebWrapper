<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/mainWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:elevation="8dp"
        android:indeterminate="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#555555"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:tooltipText="Go Home"
            app:srcCompat="@drawable/ic_home" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:tooltipText="Go Back"
            app:srcCompat="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:tooltipText="Go Forward"
            app:srcCompat="@drawable/ic_arrow_forward" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:tooltipText="Refresh"
            app:srcCompat="@drawable/ic_refresh" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:tooltipText="Stop Loading"
            app:srcCompat="@drawable/ic_stop" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="14dp"
            android:tooltipText="Share current URL"
            app:srcCompat="@drawable/ic_share" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:srcCompat="@drawable/ic_share"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/popup_window_background"
        android:padding="4dp"
        android:visibility="gone"
        app:elevation="4dp"
        tools:visibility="visible">

        <WebView
            android:id="@+id/popupWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#444444"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="Popup Window"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/popupShareUrl"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_share" />

            <ImageView
                android:id="@+id/popupClose"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_stop"
                app:tint="#FF0000" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>